@model doan_webfix.Models.ViewModel.ProductViewModels
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using doan_webfix.Extensions
<br />
<br />
<h2 class="tetx-info">Create Product</h2>
<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input type="hidden" asp-for="Products.ProductId" class="form-control" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ProductName">Name</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ProductName" readonly class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price">Price</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.newPrice"> Sale</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.newPrice" readonly class="form-control" />
                </div>

            </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Products.amount"> Sale</label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Products.amount" readonly class="form-control" />
                        </div>

                    </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Mota">Description</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Mota" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes">Types</label>
                </div>
                <div class="col-8">

                    <input asp-for="Products.ProductType_Id" readonly class="form-control" />

                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes">Size</label>
                </div>
                <div class="col-8">

                    <input asp-for="Products.ProductSize" readonly class="form-control" />

                </div>
            </div>
        </div>
        <div class="col-4">
            <img src="@Model.Products.Image" style="border-radius:5px;border:1px solid #bbb9b9;width:100%;" />
        </div>
    </div>
    <br /> <br /> 
    <div class="form-group col-5">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Products.ProductId">Go to Update</a>
        <a asp-action="Index" class="btn btn-success">Back To List</a>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



